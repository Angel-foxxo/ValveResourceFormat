<Page
    x:Class="GUI2.Viewers.ByteViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GUI2.Viewers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    >
    <StackPanel VerticalAlignment="Top" >
        <NavigationView x:Name="navView" PaneDisplayMode="Top" SelectionChanged="OnSelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Hex" Tag="Hex" />
                <NavigationViewItem Content="Text" Tag="Text" Visibility="{x:Bind SupportsText}"/>
            </NavigationView.MenuItems>
        </NavigationView>
        <Frame x:Name="contentFrame"  />
    </StackPanel>
</Page>
